generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Feedback {
  id         String   @id @default(cuid())
  name       String
  email      String
  profession String?
  country    String?
  linkedin   String?
  message    String
  created_at DateTime @default(now())

  @@map("feedbacks")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  tech        String[]
  live        String?
  repo        String?
  image_url   String?
  featured    Boolean  @default(false)
  display_order Int?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("projects")
}

model ChatSession {
  id         String   @id @default(cuid())
  session_id String   @unique
  user_ip    String?
  user_agent String?
  started_at DateTime @default(now())
  ended_at   DateTime?
  messages   ChatMessage[]

  @@map("chat_sessions")
}

model ChatMessage {
  id           String      @id @default(cuid())
  session_id   String
  session      ChatSession @relation(fields: [session_id], references: [session_id], onDelete: Cascade)
  user_message String
  bot_reply    String
  embedding    String?     // JSON string of vector embedding
  context_used String?     // Context retrieved from RAG
  created_at   DateTime    @default(now())

  @@index([session_id])
  @@map("chat_messages")
}

model AICorrection {
  id              String   @id @default(cuid())
  wrong_response  String
  correct_response String
  user_feedback   String?
  context         String?
  created_at      DateTime @default(now())

  @@map("ai_corrections")
}

model KnowledgeBase {
  id         String   @id @default(cuid())
  content    String
  embedding  String?  // JSON string of vector embedding
  category   String?  // e.g., "about", "projects", "skills"
  metadata   String?  // JSON string with additional info
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([category])
  @@map("knowledge_base")
}

model CMSContent {
  id         String   @id @default(cuid())
  key        String   @unique // e.g., "hero.title", "about.description"
  value      String   // Content value
  category   String?  // e.g., "hero", "about", "contact"
  type       String   @default("text") // "text", "markdown", "json", "image_url"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([category])
  @@map("cms_content")
}

model Analytics {
  id         String   @id @default(cuid())
  page       String   // Page visited
  referrer   String?  // Referrer URL
  user_agent String?  // Browser info
  ip_address String?  // User IP
  country    String?  // Geo location
  device     String?  // mobile/desktop/tablet
  timestamp  DateTime @default(now())

  @@index([page])
  @@index([timestamp])
  @@map("analytics")
}
